<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back_button"
            fontPath="fonts/material.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="28dp"
            android:text="@string/back_button"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="28sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/title_textview"
            fontPath="fonts/Roboto-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="28dp"
            android:paddingTop="28dp"
            android:text="@string/settings_title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="28sp"
            tools:ignore="MissingPrefix" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <TextView
                    android:id="@+id/setting_font_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="18dp"
                    android:text="Font Size"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/setting_font_size_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:maxLines="1"
                    android:paddingRight="18dp"
                    android:text="18"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <TextView
                    android:id="@+id/setting_font_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="18dp"
                    android:text="Setting Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/setting_font_type_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:maxLines="1"
                    android:paddingRight="18dp"
                    android:text="Value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <TextView
                    android:id="@+id/setting_color_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="18dp"
                    android:text="Setting Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/setting_color_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:maxLines="1"
                    android:paddingRight="18dp"
                    android:text="Value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <TextView
                    android:id="@+id/setting_focus_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="18dp"
                    android:text="Setting Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/setting_focus_mode_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:maxLines="1"
                    android:paddingRight="18dp"
                    android:text="Value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <TextView
                    android:id="@+id/setting_zero_distraction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="18dp"
                    android:text="Setting Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/setting_zero_distraction_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:maxLines="1"
                    android:paddingRight="18dp"
                    android:text="Value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <TextView
                    android:id="@+id/setting_shopping_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="18dp"
                    android:text="Setting Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/setting_shopping_list_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:maxLines="1"
                    android:paddingRight="18dp"
                    android:text="Value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <TextView
                    android:id="@+id/setting_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="18dp"
                    android:text="Setting Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/setting_tasks_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:maxLines="1"
                    android:paddingRight="18dp"
                    android:text="Value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <TextView
                    android:id="@+id/setting_dark_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="18dp"
                    android:text="Setting Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/setting_dark_mode_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:maxLines="1"
                    android:paddingRight="18dp"
                    android:text="Value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <TextView
                    android:id="@+id/setting_distraction_apps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="22sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="18dp"
                    android:text="Setting Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>